<% include partials/_pk_header %>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-5 offset-md-3 card">
            <div class="card-body">
                <form action="/update/<%= data.id %>" method="POST">
                    <div class="form-group">
                        <input type="text" name="Catagory" value="<%= data.Catagory %>" placeholder="Name" class="form-control"
                               autofocus>
                    </div>
                    <div class="form-group">
                        <input type="text" name="Details" value="<%= data.Details %>" placeholder="Address"
                               class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="text" name="Url" value="<%= data.Url %>" placeholder="Phone"
                               class="form-control">
                    </div>

                    <button type="submit" class="btn btn-primary">
                        save customer
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

